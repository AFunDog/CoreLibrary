<?xml version="1.0" encoding="utf-8" ?>
<DataTemplate
    x:Class="CoreServices.WinUI.Templates.DefaultItemTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CoreServices.WinUI.Templates"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="using:CoreServices.WinUI.Structs"
    x:DataType="s:PageItem"
    mc:Ignorable="d">

    <NavigationViewItem Content="{x:Bind Title}">
        <NavigationViewItem.Icon>
            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="{x:Bind IconGlyph}" />
        </NavigationViewItem.Icon>
    </NavigationViewItem>
</DataTemplate>
