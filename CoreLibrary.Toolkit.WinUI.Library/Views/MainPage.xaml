<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="CoreServicesWinUILibrary.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CoreServicesWinUILibrary.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <TextBlock
            Margin="0,8,0,0"
            HorizontalAlignment="Center"
            Style="{ThemeResource TitleTextBlockStyle}"
            Text="主页" />
        <StackPanel
            MaxWidth="640"
            Margin="16"
            Orientation="Vertical">
            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="⛳如何开始使用" />
            <RichTextBlock Margin="0,8,0,0" Style="{ThemeResource BodyRichTextBlockStyle}">
                <Paragraph>
                    <Run>1. 将</Run>
                    <Run FontWeight="Bold" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}">CoreServices.WinUI</Run>
                    <Run>项目添加到要使用的项目的解决方案下</Run>
                </Paragraph>
                <Paragraph>
                    <Run>2. 引用该项目</Run>
                </Paragraph>
                <Paragraph>
                    <Run>3. 最后，正确运行使用项目，即可看到效果</Run>
                </Paragraph>
            </RichTextBlock>
        </StackPanel>
    </StackPanel>
</Page>
